<h1><%= t("title.フォロー一覧") %></h1>

<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= user.introduction %></td>
    </tr>
  <% end %>
</table>

<%= link_to t("button.back"), user_path %>
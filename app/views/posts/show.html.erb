<div class="post-show">
  <h1 class="post-show-user"><%= link_to @post.user.name, user_path(@post.user) %>さんの投稿</h1>
  <div class="post-show-main-title">「<%= @post.main_title %>」</div>
  <% if @post.date %>
    <div class="post-show-date"><%= @post.date.strftime('%Y年%m月%d日') %></div>
  <% end %>
  <div class="post-show-place">場所：<%= @post.location %></div>
  <div class="post-show-sub-title">サブタイトル：<%= @post.sub_title %></div>
  <div class="post-show-body">内容：<%= @post.body %></div>
  <% @post.images.each do |image| %>
    <%= image_tag image.to_s, size: '300x200' %>
  <% end %>

  <% if @post.user == current_user %>
    <%= link_to "編集", edit_post_path(@post) %>
  <% end %>
  <% if @post.user == current_user %>
    <%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
  <% end %>

  <!--いいね機能-->
  <div id="like_buttons_<%= @post.id %>">
    <%= render "likes/like", post: @post %>
  </div>

  <!--コメント一覧-->
  <div id="comments_area">
    <%= render 'comments/post_comments', post: @post %>
  </div>

  <!--コメント作成フォーム-->
  <div class="new-comment">
    <%= render 'comments/form', post: @post, comment: @comment %>
  </div>
  <%= link_to t("button.back"), "/" %>
</div>

